conky.config = {
    own_window = true,
    own_window_transparent = false,
    own_window_type = desktop,
    out_to_x = false,
    own_window = false,
    out_to_console = true,
    background = false,
    max_text_width = 0,

    update_interval = 2.0,

    total_run_times = 0,

    short_units = true,

    if_up_strictness = 'address',

    use_spacer = 'left',

    override_utf8_locale = false,

    cpu_avg_samples = 2,
};

conky.text = [[
[
    { "full_text": "${mpd_smart} ${mpd_bar 5 100}",             "color": "\#ff0000" },
    { "full_text": "CPU: ${cpubar}%",                           "color": ${if_match ${cpu}<30}"\#00ff00"${else}${cpu}<50"\#333300"${endif} },
    { "full_text": "I/O: ${diskio} F: ${fs_bar /}/${fs_size}" , "color": "\#ffffff" },
    { "full_text": "RAM ${memperc}%",                           "color": ${if_match ${memperc}<90}"\#006600"${else}"\#ff0000"${endif} },
    { "full_text": "${time %H:%M %d/%m}",                       "color": "\#4444bb" }
],
]];
