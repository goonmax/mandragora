{
    "install_cmd" : "sudo pacman -S",
    "install" : [
        "arandr",
        "calcurse",
        "conky",
        "compton",
        "curl",
        "dmenu",
        "gvim",
        "gdmap",
        "jupyter",
        "lolcat",
        "lsof",
        "mpd",
        "mpv",
        "netbeans",
        "ntp",
        "python-pip",
        "python-pywal",
        "ranger",
        "rsync",
        "rxvt-unicode",
        "scrot",
        "sxiv",
        "screenfetch",
        "tig",
        "tmux",
        "trash-cli",
        "tree",
        "ttf-dejavu",
        "ufw",
        "unclutter",
        "unp",
        "rxvt-unicode",
        "xclip",
        "xorg-xev",
        "youtube-dl",
        "wmctrl",
        "zsh"
    ],
    "copy" : {
        ".config/powerline" : "~/.config/powerline", 
        ".config/ncmpcpp" : "~/.config/.ncmpcpp",
        ".config/i3" : "~/.config/i3",
        ".config/ranger" : "~/.config/ranger",
        ".config/mpd" : "~/.config/mpd",

        ".tmux" : "~/.tmux/",
        ".urxvt" : "~/.urxvt/",

        ".tmux.conf" : "~/.tmux.conf",
        ".Xresources" : "~/.Xresources",
        ".bash_aliases" : "~/.bash_aliases",
        ".nexor.ascii" : "~/nexor.ascii",
        ".fehbg" : "~/.fehbg",
        ".bash_profile" : "~/.bash_profile",
        ".conky-i3bar" : "~/.conky-i3bar",
        ".conkyrc" : "~/.conkyrc",
        ".vimrc" : "~/.vimrc",
        ".gdmap" : "~/.gdmap",
        ".bashrc" : "~/.bashrc",
        ".zshrc" : "~/.zshrc",
        ".urlview" : "~/.urlview"
    },
    "commands": [
        "mkdir -p ~/util/ && git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim && vim +PluginInstall +qall",
        "mkdir -p ~/util/ && cd $_ && git clone https://github.com/danielchatfield/trello-desktop",
        "mkdir -p ~/util/ && cd $_ && git clone https://github.com/emcrisostomo/fswatch",
        "mkdir -p ~/util/ && cd $_ && git clone https://github.com/jesseduffield/lazygit",
        "mkdir -p ~/util/ && cd $_ && git clone https://github.com/mvrozanti/bash-tetris",
        "mkdir -p ~/util/ && cd $_ && git clone https://github.com/sigpipe/urlview",

        "mkdir -p ~/Downloads && wget $(curl -s 'https://www.waterfoxproject.org/en-US/waterfox/new/?scene=1' | re '(https://storage-waterfox.netdna-ssl.com/releases/linux64/installer/waterfox-\\d+.\\d+.\\d+.en-US.linux-x86_64.tar.bz2)' | head -n1) -O ~/Downloads/waterfox-latest.tar.bz2 && cd ~/Downloads && unp -U waterfox-latest.tar.bz2 && cd waterfox* && ln -s $(realpath waterfox) /usr/local/bin/waterfox",

        "mkdir ~/Downloads && wget https://telegram.org/dl/desktop/linux -O ~/Downloads/telegram-latest.tar.xz && cd ~/Downloads && unp -U telegram-latest.tar.xz && cd Telegram && ln -s $(realpath Telegram) /usr/local/bin/telegram",

        "pip3 install --user maybe",
        "pip3 install --user grip"
    ]
}
