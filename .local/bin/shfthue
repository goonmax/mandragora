#!/bin/bash
hex="`kitty @ --to unix:@mykitty get-colors | grep ^ba | cut -c 25-`"
if [[ -z $1 ]]; then
    newhex=`echo "HEX('"$hex"').rotate(10.00)" | /home/nexor/.pyenv/shims/colp`
else
    newhex=`echo "HEX('"$hex"').rotate(-10.00)" | /home/nexor/.pyenv/shims/colp`
fi
kitty @ --to unix:@mykitty set-colors background=$newhex
